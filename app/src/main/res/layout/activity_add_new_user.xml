<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewUser">

    <TextView
        android:id="@+id/add_new_user_name_header"
        style="@style/TextBoxHeaderText"
        android:text="@string/add_new_user_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_new_user_name_value"
        style="@style/EditBoxStyles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/add_new_user_name_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_new_user_name_header"
        app:layout_constraintTop_toTopOf="@+id/add_new_user_name_header" />

    <Button
        android:id="@+id/add_new_user_button_submit"
        style="@style/MyButtonStyles"
        android:text="@string/add_new_user_text"
        android:onClick="addNewUser"
        app:layout_constraintEnd_toEndOf="@+id/add_new_user_name_value"
        app:layout_constraintStart_toStartOf="@+id/add_new_user_name_value"
        app:layout_constraintTop_toBottomOf="@+id/add_new_user_name_value" />

</androidx.constraintlayout.widget.ConstraintLayout>